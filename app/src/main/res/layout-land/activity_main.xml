<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/holo_blue_dark"
    tools:context="com.example.android.scorekeeper.MainActivity">


    <ImageView
        android:id="@+id/dice_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:src="@drawable/dice_image_03" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/dice_image"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:text="Player One"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/player_one_score"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:text="0"
                    android:textColor="#000000"
                    android:textSize="58sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:text="Player Two"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/player_two_score"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:text="0"
                    android:textColor="#000000"
                    android:textSize="58sp" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:orientation="horizontal"
                    android:paddingLeft="10dp">

                    <Button
                        style="@style/button_style"
                        android:onClick="addOneForPlayerOne"
                        android:text="@string/_1" />

                    <Button
                        style="@style/button_style"
                        android:onClick="addTwoForPlayerOne"
                        android:text="@string/_2" />

                    <Button
                        style="@style/button_style"
                        android:onClick="addThreeForPlayerOne"
                        android:text="@string/_3" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:orientation="horizontal"
                    android:paddingLeft="10dp">

                    <Button
                        style="@style/button_style"
                        android:onClick="addOneForPlayerOne"
                        android:text="@string/_4" />

                    <Button
                        style="@style/button_style"
                        android:onClick="addTwoForPlayerOne"
                        android:text="@string/_5" />

                    <Button
                        style="@style/button_style"
                        android:onClick="addThreeForPlayerOne"
                        android:text="@string/_6" />
                </LinearLayout>

            </RelativeLayout>

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_marginBottom="8dp"
                android:background="@android:color/holo_green_dark" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:orientation="horizontal"
                    android:paddingLeft="10dp">

                    <Button
                        style="@style/button_style"
                        android:onClick="addOneForPlayerOne"
                        android:text="@string/_1" />

                    <Button
                        style="@style/button_style"
                        android:onClick="addTwoForPlayerOne"
                        android:text="@string/_2" />

                    <Button
                        style="@style/button_style"
                        android:onClick="addThreeForPlayerOne"
                        android:text="@string/_3" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:orientation="horizontal"
                    android:paddingLeft="10dp">

                    <Button
                        style="@style/button_style"
                        android:onClick="addOneForPlayerOne"
                        android:text="@string/_4" />

                    <Button
                        style="@style/button_style"
                        android:onClick="addTwoForPlayerOne"
                        android:text="@string/_5" />

                    <Button
                        style="@style/button_style"
                        android:onClick="addThreeForPlayerOne"
                        android:text="@string/_6" />
                </LinearLayout>

            </RelativeLayout>

        </LinearLayout>

    </LinearLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="96dp"
        android:onClick="resetScore"
        android:text="Reset"
        android:textColor="@android:color/holo_green_dark" />

</RelativeLayout>
